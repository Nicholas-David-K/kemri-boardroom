generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

//! DATABASE BY NEON TECH

enum Locations {
  Mombasa
  Kisumu
  Nairobi
}

enum Role {
  user
  admin
}

enum Amenities {
  Whiteboard
  Projection
  Internet
  Sound
  Telephone
}

model User {
  id       String @id @default(nanoid(10)) @map("_id")
  username String @unique
  name     String
  email    String @unique
  role     Role   @default(user)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Boardroom {
  id           String         @id @default(nanoid(10)) @map("_id")
  name         String
  location     Locations      @default(Nairobi)
  description  String
  amenities    Amenities[]
  capacity     Int
  availability Availability[]
  image        Image[]
  active       Boolean        @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Availability {
  id          String     @id @default(nanoid(10)) @map("_id")
  day         String
  startTime   String
  endTime     String
  boardroomId String?
  Boardroom   Boardroom? @relation(fields: [boardroomId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardroomId])
}

model Image {
  id          String     @id @default(nanoid(10)) @map("_id")
  url         String
  boardroomId String
  Boardroom   Boardroom? @relation(fields: [boardroomId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardroomId])
}
